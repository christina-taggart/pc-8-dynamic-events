<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" class="todo" name="todo_content" placeholder="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="display-todos">
    <% @todos.each do |todo| %>
      <div class="single-todo">
        <h2 class="todo_name"><%= todo.todo_content %></h2>
        <ul>
          <li><a href="/todos/<%= todo.id %>" class="delete">Delete</a></li>
          <li><a href="#" class="complete">Complete</a></li>
        </ul>
      </div>
    <% end %>
  </div>

</div>