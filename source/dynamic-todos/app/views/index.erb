<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" class="todo" value="Put your todo item here!"/>
      <button class="add" type="submit">Add Todo</button>
    </form>
  </div>

  <div class="todo_list">
      <% @todos.each do |todo| %>
        <div class="todo" data-id=<%= todo.id %>>
          <% if todo.completed %>
            <h2 class="complete"><%= todo.todo_content %></h2>
            <% @complete_text = "Mark Incomplete" %>
          <% else %>
            <h2><%= todo.todo_content %></h2>
            <% @complete_text = "Mark Complete" %>
          <% end %>
          <ul>
            <li><a href="#" class="delete">Delete</a></li>
            <li><a href="#" class="complete"><%= @complete_text %></a></li>
          </ul>
        </div>
      <% end %>
  </div>

  <div id="todo_template" style="display: none;">
    <div class="todo">
      <h2>Todo Name</h2>
      <ul>
        <li><a href="#" class="delete">Delete</a></li>
        <li><a href="#" class="complete">Mark Complete</a></li>
      </ul>
    </div>
  </div>
</div>
