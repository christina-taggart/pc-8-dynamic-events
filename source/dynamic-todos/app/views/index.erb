<div id="todo">
  <div class="toolbox">
    <form action="/add_todo" method="post">
      <input type="text" name="todo_content" class="todo" placeholder="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">

  </div>

  <div id="todo_template" style="display: none;">
    <div class="todo">
      <li>
        <h2>{{name}}</h2>
          <a href="#" class="delete" data-num="{{id}}">Delete</a>
          <a href="#" class="complete" data-num="{{id}}">Complete</a>
      </li>
    </div>
  </div>
</div>