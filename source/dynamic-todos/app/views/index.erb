<div id="todo">
  <div class="toolbox">
    <form action="/todos" method="post">
      <input type="text" class="todo" name="todo_content" placeholder="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
    </form>
  </div>

  <div id="todo_template">
  <div id="new_todo"></div>
    <div class="todo">
      <h2>Todo Name</h2>
      <% @todos.each do |todo| %>
      <ul class="todo_list">
        <li><p><%= todo.todo_content %></p></li>
        <li><button type="submit" class="delete">Delete</button></li>
        <li><button type="submit" class="complete">Complete</button></li>
      </ul>
      <% end %>
    </div>
  </div>
</div>
