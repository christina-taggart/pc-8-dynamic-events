<% if todo %>
  <% todo_content = todo.todo_content %>
  <% id = todo.id %>
  <% todo.completed ? complete = 'complete' : nil %>
<% end %>

<div class="todo <%= complete %>">
  <h2 id="content">
    <%= todo_content %>
  </h2>
  <ul>
    <li><a href="#" data-id="<%= id %>" class="delete">Delete</a></li>
    <li><a href="#" data-id="<%= id %>" class="complete">Complete</a></li>
  </ul>
</div>