<div id="todo">
  <div class="toolbox">
    <form id="create_todo" action="/add_todo" method="post">
      <input type="text" class="todo" name="todo_content" value="Put your todo item here!"/>
      <input type="submit" value="Add Todo"/>
      <!-- <button class="add" type="submit">Add Todo</button> -->
    </form>
  </div>

  <div class="todo_list">
    <h2>Todo List</h2>
    <% Todo.find_all_by_completed(false).each do |todo| %>
      <div class="list_item item_<%= todo.id %>">
        <li><%= todo.todo_content %></li>
        <a href="/todo/<%= todo.id %>" class="delete">Delete</a>
        <a href="/todo/<%= todo.id %>" class="complete">Complete</a>
      </div>
    <% end %>
  </div>

  <div class="completed_list">
    <h2>Completed Todos</h2>
    <% Todo.find_all_by_completed(true).each do |todo| %>
      <div class="list_item item_<%= todo.id %>">
        <li><%= todo.todo_content %></li>
        <a href="/todo/<%= todo.id %>" class="delete">Delete</a>
      </div>
    <% end %>
  </div>

</div>